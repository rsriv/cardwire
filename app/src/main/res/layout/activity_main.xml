<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapps.rishi.cardwire.MainActivity"
    >
    <ImageView
        android:src="@drawable/homeback"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        android:padding="0dp"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        />

    <Button
        android:text="Wire by NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        android:id="@+id/wire"
        android:onClick="disp"
        android:layout_above="@+id/myCard"

        android:shadowColor="#eaffe600"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:textColor="#FFF"
        android:alpha=".90"
        android:background="@drawable/button" />

    <Button
        android:text="Wire by PIN"
        android:layout_width="match_parent"
        android:minHeight="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/wire_pin"
        android:onClick="wirePin"
        android:shadowColor="#eaffe600"
        android:textColor="#FFF"
        android:alpha=".90"
        android:scaleType="fitXY"
        android:background="@drawable/button"
        android:layout_above="@+id/wire"
        android:layout_alignParentStart="true" />

    <Button
        android:text="My Card"
        android:layout_width="match_parent"
        android:minHeight="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/myCard"
        android:layout_marginBottom="220dp"
        android:onClick="myCard"
        android:shadowColor="#eaffe600"
        android:textColor="#FFF"
        android:alpha=".90"
        android:scaleType="fitXY"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myCard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:id="@+id/my_pin_view"
        android:textSize="25sp"
        android:textColor="@color/textclr"/>

    <Button
        android:text="Help"
        android:id="@+id/button"
        android:background="@drawable/hbutton"
        android:alpha="0.9"
        android:textColor="@color/textclr"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="help" />


</RelativeLayout>
